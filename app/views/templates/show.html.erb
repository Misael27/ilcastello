<p id="notice"><%= notice %></p>
<div class="row center-xs">
  <div class="col-xs-8 col-md-6 ">
    <div class="box text-left">
        <div class="imageView" style="height:500px; width:850px; ">
          <%if @template.urlImage != nil %>
            <%= link_to image_tag("" << @template.urlImage), root_path, :class  => "image left" %>
          <%end%>
        </div>


      <div class="show-view">

        <h1>
          <%= @template.title %>
        </h1>

        <p>
          <%= @template.content %>
        </p>

      </div>
    </div>
  </div>
</div>



