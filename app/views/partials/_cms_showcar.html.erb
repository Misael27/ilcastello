<p id="notice"><%= notice %></p>
<div class="inner-cms">

  <h1 class="cms-h1">Listing Showcar</h1>
  <div class="row">


        <div class="col-md-1">Name</div>
        <div class="col-md-7">Description</div>
        <div class="col-md-1">Photo link</div>
        <div class="col-md-3"></div>
    </div>

    <br>

      <% @showcars.each do |showcar| %>

        <div class="row">
          <div class="col-md-1"><%= showcar.name %></div>
          <div class="col-md-7"><%= showcar.description %></div>
          <div class="col-md-1"><%= showcar.photo_link %></div>
          <div class="col-md-3">
            <div class="row">
            <div class="col-md-4"><%= link_to 'Show', showcar , class: "show-button"%></div>
            <div class="col-md-4"><%= link_to 'Edit', edit_showcar_path(showcar), class: "edit-button" %></div>
            <div class="col-md-4"><%= link_to 'Destroy', showcar, method: :delete, data: { confirm: 'Are you sure?' }, class: "destroy-button" %></div>
              </div>
          </div>
        </div>
        <hr>
      <% end %>

<br>
      <div class="">
          <%= link_to 'New Showcar', new_showcar_path, class: "newshowcar-button" %>
      </div>
  </div>

<br>
